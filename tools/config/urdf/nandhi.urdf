<?xml version="1.0"?>

<robot name="nandhi">
    <material name="green">
        <color rgba="0 1 0 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.4 0.26 0.01" />
            </geometry>
            <origin xyz="0 0 0.005" rpy="0 0 0" />
            <material name="blue"/>
        </visual>
    </link>

    <link name="front_left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="front_right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="rear_left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="rear_right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
    </link>


    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.045" rpy="0 0 0"/>
    </joint>

    <joint name="base_front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel_link"/>
        <origin xyz="-0.15 -0.15 0.005" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel_link"/>
        <origin xyz="-0.15 0.15 0.005" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel_link"/>
        <origin xyz="0.15 -0.15 0.005" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel_link"/>
        <origin xyz="0.15 0.15 0.005" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>